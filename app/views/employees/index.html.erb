<p id="notice"><%= notice %></p>

<h1>Funcionários</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cargo</th>
      <th>Data de Nascimento</th>
      <th>RG</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th>Admissão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.position %></td>
        <td><%= employee.birth_date %></td>
        <td><%= employee.rg %></td>
        <td><%= employee.cpf %></td>
        <td><%= employee.telephone %></td>
        <td><%= employee.admission_date %></td>
        <td><%= link_to 'exibir', employee %></td>
        <td><%= link_to 'editar', edit_employee_path(employee) %></td>
        <td><%= link_to 'remover', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_employee_path, class: 'btn btn-default' %>
