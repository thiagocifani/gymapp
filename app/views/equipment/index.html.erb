<p id="notice"><%= notice %></p>

<h1>Equipment</h1>

<table class ="table table-hover" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Aquisition date</th>
      <th>Weight</th>
      <th>Max weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.quantity %></td>
        <td><%= equipment.aquisition_date %></td>
        <td><%= equipment.weight %></td>
        <td><%= equipment.max_weight %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Equipment', new_equipment_path, class: "btn btn-default"%>
